{
  "name": "@mizunashi_mana/cc-voice-reporter",
  "version": "1.0.0",
  "description": "Real-time voice reporting for Claude Code",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "cc-voice-reporter": "./dist/cli/cli.js"
  },
  "files": [
    "dist",
    "LICENSE.Apache-2.0.txt",
    "LICENSE.MPL-2.0.txt"
  ],
  "scripts": {
    "prepack": "cp ../../README.md ../../LICENSE ../../LICENSE.Apache-2.0.txt ../../LICENSE.MPL-2.0.txt .",
    "build": "tsc -p tsconfig.build.json",
    "lint:eslint": "eslint --cache --fix src *.js",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "imports": {
    "#lib": {
      "cc-voice-reporter-dev": "./src/index.js",
      "default": "./dist/index.js"
    },
    "#cli": {
      "cc-voice-reporter-dev": "./src/cli/index.js",
      "default": "./dist/cli/index.js"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mizunashi-mana/cc-voice-reporter",
    "directory": "packages/cc-voice-reporter"
  },
  "homepage": "https://github.com/mizunashi-mana/cc-voice-reporter",
  "keywords": [
    "claude-code",
    "voice",
    "tts",
    "accessibility",
    "monitoring"
  ],
  "license": "Apache-2.0 OR MPL-2.0",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public",
    "provenance": true
  },
  "devDependencies": {
    "@cc-voice-reporter/eslint-config": "*",
    "@types/node": "^25.2.3",
    "eslint": "^9.0.0",
    "typescript": "^5.5.0",
    "vitest": "^4.0.0"
  },
  "dependencies": {
    "chokidar": "^5.0.0",
    "zod": "^4.3.6"
  }
}
